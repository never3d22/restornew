{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/screens/*": ["src/screens/*"],
      "@/store/*": ["src/store/*"],
      "@/api/*": ["src/api/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "expo-env.d.ts"]
}
